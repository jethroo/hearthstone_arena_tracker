<br>
<div class="medium-4 large-2 columns">
  <div class="hero-frame">
    <%= image_tag("heroes/#{arena.hero}.png") %>
    <%= hidden_field_tag 'hero', arena.hero %>
    <%= hidden_field_tag 'arena', arena.id %>
  </div>
</div>

<div class="medium-8 large-10 columns">
  <h2>Rewards</h2>
  <% if arena.rewarded? %>
    <ul>
      <li>
        Packs: <%= arena.packs %>
      </li>
      <li>
        Gold: <%= arena.gold %>
      </li>
      <li>
        Dust: <%= arena.dust %>
      </li>
      <li>
        Cards: <%= arena.cards %>
      </li>
      <li>
        Golden cards: <%= arena.gold_cards %>
      </li>

    </ul>
  <% else %>
    <%= form_for(arena) do |f| %>
      <%= f.label :packs %>
      <%= f.text_field :packs %>
      <%= f.label :gold %>
      <%= f.text_field :gold %>
      <%= f.label :dust %>
      <%= f.text_field :dust %>
      <%= f.label :cards %>
      <%= f.text_field :cards %>
      <%= f.label :golden_cards %>
      <%= f.text_field :gold_cards %>
      <%= f.submit "Create", class: "button" %>
    <% end %>
  <% end %>
</div>

<div class="large-12">
  <hr>
  <h2>Your arena matches</h2>
  <div id="error">
  </div>
</div>

<div class="large-12">
  <div id="my_matches">
    <%= render partial: "matches/match_create_row", collection: arena.matches.decorate, as: :match, locals: { hide_delete_button: true } %>
  </div>
</div>
